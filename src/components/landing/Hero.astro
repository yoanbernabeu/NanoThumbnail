---
// Hero section — The Showstopper
const base = import.meta.env.BASE_URL;
const samples = [
    `${base}assets/sample1.webp`,
    `${base}assets/sample2.webp`,
    `${base}assets/sample3.webp`,
    `${base}assets/sample4.webp`,
    `${base}assets/sample5.webp`,
    `${base}assets/sample6.webp`,
];
---

<div class="hero">
    <!-- Animated background grid -->
    <div class="hero-bg">
        <div class="grid-lines"></div>
        <div class="glow glow-1"></div>
        <div class="glow glow-2"></div>
        <div class="glow glow-3"></div>
    </div>

    <!-- Floating thumbnails showcase -->
    <div class="floating-showcase" aria-hidden="true">
        {samples.map((src, i) => (
            <div class={`floating-thumb ft-${i}`}>
                <img src={src} alt="" loading="eager" />
            </div>
        ))}
    </div>

    <!-- Main content -->
    <div class="hero-content">
        <div class="badge-new">
            <span class="pulse-dot"></span>
            <span class="badge-text" data-i18n="landing.badge_new">NOUVEAU</span>
            <span class="badge-desc" data-i18n="landing.badge_new_desc">Personas & Titre sur vos miniatures</span>
        </div>

        <h1 class="hero-title">
            <span class="title-line line-1" data-i18n="landing.hero_title">Générez des miniatures<br/>virales avec l'IA</span>
        </h1>

        <!-- Simulated generation prompt -->
        <div class="hero-prompt-demo">
            <div class="prompt-bar">
                <div class="prompt-icon">
                    <i class="fa-solid fa-wand-magic-sparkles"></i>
                </div>
                <div class="prompt-text">
                    <span class="typing-text"></span>
                    <span class="cursor"></span>
                </div>
                <button class="prompt-go">
                    <i class="fa-solid fa-bolt"></i>
                </button>
            </div>
        </div>

        <p class="hero-subtitle" data-i18n="landing.hero_subtitle">
            Utilisez la puissance de <strong>Google Nano Banana Pro</strong> pour transformer
            vos idées en miniatures YouTube percutantes.
        </p>

        <div class="cta-group">
            <a href={`${base}app`} class="btn btn-primary hero-cta">
                <span data-i18n="landing.cta_start">Commencer maintenant</span>
                <i class="fa-solid fa-arrow-right"></i>
            </a>
            <a href="#pricing" class="btn btn-secondary hero-cta-secondary">
                <span data-i18n="landing.cta_pricing">Voir les prix</span>
            </a>
        </div>

        <div class="hero-proof">
            <div class="proof-badges">
                <span class="proof-item">
                    <i class="fa-solid fa-check-circle"></i>
                    <span data-i18n="landing.badge_free">Gratuit (Interface)</span>
                </span>
                <span class="proof-divider"></span>
                <span class="proof-item">
                    <i class="fa-solid fa-check-circle"></i>
                    <span data-i18n="landing.badge_byok">BYOK (Replicate)</span>
                </span>
                <span class="proof-divider"></span>
                <span class="proof-item">
                    <a href="https://github.com/yoanbernabeu/NanoThumbnail" target="_blank" rel="noopener noreferrer" class="github-proof">
                        <i class="fa-brands fa-github"></i>
                        <span data-i18n="landing.open_source">Open Source. Aujourd'hui et pour toujours.</span>
                    </a>
                </span>
            </div>
        </div>
    </div>
</div>

<script>
    // Typing animation for the prompt bar
    const prompts = [
        "Développeur choqué devant un bug impossible...",
        "Visage émerveillé, explosion de couleurs, texte 'WOW'...",
        "Gamer concentré, néons bleus, titre 'RECORD BATTU'...",
        "Shocked developer, 'THIS CHANGES EVERYTHING'...",
    ];

    function initTyping() {
        const el = document.querySelector('.typing-text');
        if (!el) return;

        let promptIndex = 0;
        let charIndex = 0;
        let isDeleting = false;
        let timeout: ReturnType<typeof setTimeout>;

        function type() {
            const currentPrompt = prompts[promptIndex];

            if (!isDeleting) {
                el.textContent = currentPrompt.slice(0, charIndex + 1);
                charIndex++;
                if (charIndex >= currentPrompt.length) {
                    isDeleting = true;
                    timeout = setTimeout(type, 2500);
                    return;
                }
                timeout = setTimeout(type, 45 + Math.random() * 35);
            } else {
                el.textContent = currentPrompt.slice(0, charIndex - 1);
                charIndex--;
                if (charIndex <= 0) {
                    isDeleting = false;
                    promptIndex = (promptIndex + 1) % prompts.length;
                    timeout = setTimeout(type, 400);
                    return;
                }
                timeout = setTimeout(type, 20);
            }
        }

        setTimeout(type, 1200);
    }

    document.addEventListener('DOMContentLoaded', initTyping);
</script>

<style>
    /* === HERO CONTAINER === */
    .hero {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    /* === BACKGROUND === */
    .hero-bg {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    .grid-lines {
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(rgba(139, 92, 246, 0.03) 1px, transparent 1px),
            linear-gradient(90deg, rgba(139, 92, 246, 0.03) 1px, transparent 1px);
        background-size: 60px 60px;
        mask-image: radial-gradient(ellipse 70% 60% at 50% 50%, black, transparent);
        -webkit-mask-image: radial-gradient(ellipse 70% 60% at 50% 50%, black, transparent);
    }

    .glow {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0;
        animation: glowPulse 8s ease-in-out infinite;
    }

    .glow-1 {
        width: 600px;
        height: 600px;
        background: rgba(109, 40, 217, 0.2);
        top: -10%;
        left: -5%;
        animation-delay: 0s;
    }

    .glow-2 {
        width: 500px;
        height: 500px;
        background: rgba(79, 70, 229, 0.15);
        bottom: -15%;
        right: -5%;
        animation-delay: 3s;
    }

    .glow-3 {
        width: 300px;
        height: 300px;
        background: rgba(244, 114, 182, 0.12);
        top: 30%;
        right: 20%;
        animation-delay: 5s;
    }

    @keyframes glowPulse {
        0%, 100% { opacity: 0.4; transform: scale(1); }
        50% { opacity: 0.8; transform: scale(1.15); }
    }

    /* === FLOATING THUMBNAILS === */
    .floating-showcase {
        position: absolute;
        inset: 0;
        z-index: 1;
        pointer-events: none;
    }

    .floating-thumb {
        position: absolute;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.08);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        opacity: 0;
        animation: floatIn 1s ease-out forwards, floatBob 6s ease-in-out infinite;
        will-change: transform, opacity;
    }

    .floating-thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    /* Individual positions — cinematic spread */
    .ft-0 {
        width: 280px;
        top: 8%;
        left: 3%;
        transform: rotate(-8deg) perspective(800px) rotateY(15deg);
        animation-delay: 0.3s, 0.3s;
    }
    .ft-1 {
        width: 220px;
        top: 55%;
        left: 5%;
        transform: rotate(4deg) perspective(800px) rotateY(12deg);
        animation-delay: 0.6s, 0.6s;
    }
    .ft-2 {
        width: 250px;
        bottom: 5%;
        left: 18%;
        transform: rotate(-3deg) perspective(800px) rotateY(8deg);
        animation-delay: 0.9s, 0.9s;
    }
    .ft-3 {
        width: 260px;
        top: 6%;
        right: 4%;
        transform: rotate(6deg) perspective(800px) rotateY(-14deg);
        animation-delay: 0.5s, 0.5s;
    }
    .ft-4 {
        width: 230px;
        top: 50%;
        right: 3%;
        transform: rotate(-5deg) perspective(800px) rotateY(-10deg);
        animation-delay: 0.8s, 0.8s;
    }
    .ft-5 {
        width: 240px;
        bottom: 4%;
        right: 16%;
        transform: rotate(3deg) perspective(800px) rotateY(-8deg);
        animation-delay: 1.1s, 1.1s;
    }

    @keyframes floatIn {
        from { opacity: 0; filter: blur(10px) brightness(0.3); }
        to { opacity: 0.25; filter: blur(0px) brightness(0.7); }
    }

    @keyframes floatBob {
        0%, 100% { translate: 0 0; }
        33% { translate: 0 -12px; }
        66% { translate: 0 8px; }
    }

    .floating-thumb:hover {
        opacity: 0.5 !important;
        filter: brightness(0.9) !important;
        transition: opacity 0.4s, filter 0.4s;
    }

    /* === MAIN CONTENT === */
    .hero-content {
        position: relative;
        z-index: 10;
        text-align: center;
        max-width: 820px;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Badge */
    .badge-new {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: rgba(139, 92, 246, 0.08);
        border: 1px solid rgba(139, 92, 246, 0.2);
        border-radius: 30px;
        padding: 6px 18px 6px 14px;
        margin-bottom: 2rem;
        font-size: 0.8rem;
        color: #fff;
        opacity: 0;
        animation: fadeUp 0.8s ease-out 0.2s forwards;
        transition: transform 0.3s, border-color 0.3s;
    }

    .badge-new:hover {
        transform: scale(1.05);
        border-color: var(--primary);
    }

    .pulse-dot {
        width: 7px;
        height: 7px;
        border-radius: 50%;
        background: #22c55e;
        animation: pulseDot 2s ease-in-out infinite;
    }

    @keyframes pulseDot {
        0%, 100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.5); }
        50% { box-shadow: 0 0 0 5px rgba(34, 197, 94, 0); }
    }

    .badge-text {
        font-weight: 800;
        color: var(--primary);
        letter-spacing: 1px;
    }

    .badge-desc {
        background: rgba(255, 255, 255, 0.07);
        padding: 3px 12px;
        border-radius: 20px;
        font-size: 0.78rem;
    }

    /* Title */
    .hero-title {
        font-size: clamp(2.8rem, 7vw, 5rem);
        line-height: 1.05;
        font-weight: 900;
        letter-spacing: -0.03em;
        margin-bottom: 2rem;
        opacity: 0;
        animation: fadeUp 0.8s ease-out 0.4s forwards;
    }

    .title-line {
        background: linear-gradient(
            135deg,
            #ffffff 0%,
            #e0d0ff 40%,
            #c084fc 60%,
            #a855f7 80%,
            #f0abfc 100%
        );
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gradientShift 8s ease-in-out infinite;
    }

    @keyframes gradientShift {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    /* Prompt demo bar */
    .hero-prompt-demo {
        width: 100%;
        max-width: 600px;
        min-width: 0;
        margin-bottom: 2rem;
        opacity: 0;
        animation: fadeUp 0.8s ease-out 0.6s forwards;
    }

    .prompt-bar {
        display: flex;
        align-items: center;
        gap: 12px;
        background: rgba(10, 10, 20, 0.7);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        padding: 14px 16px;
        box-shadow:
            0 0 0 1px rgba(139, 92, 246, 0.1),
            0 20px 50px rgba(0, 0, 0, 0.4),
            inset 0 1px 0 rgba(255, 255, 255, 0.05);
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    .prompt-bar:hover {
        border-color: rgba(139, 92, 246, 0.3);
        box-shadow:
            0 0 0 1px rgba(139, 92, 246, 0.2),
            0 20px 50px rgba(0, 0, 0, 0.4),
            0 0 30px rgba(139, 92, 246, 0.08),
            inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .prompt-icon {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        background: linear-gradient(135deg, var(--primary), #7c3aed);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 0.9rem;
        flex-shrink: 0;
        box-shadow: 0 4px 12px rgba(109, 40, 217, 0.4);
    }

    .prompt-text {
        flex: 1;
        display: flex;
        align-items: center;
        min-width: 0;
        min-height: 24px;
        overflow: hidden;
    }

    .typing-text {
        color: var(--text-muted);
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .cursor {
        display: inline-block;
        width: 2px;
        height: 18px;
        background: var(--primary);
        margin-left: 2px;
        animation: blink 1s step-end infinite;
        flex-shrink: 0;
    }

    @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0; }
    }

    .prompt-go {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        border: none;
        background: linear-gradient(135deg, #f59e0b, #f97316);
        color: #fff;
        font-size: 0.85rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        transition: transform 0.2s, box-shadow 0.2s;
        box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
    }

    .prompt-go:hover {
        transform: scale(1.1);
        box-shadow: 0 6px 20px rgba(245, 158, 11, 0.5);
    }

    /* Subtitle */
    .hero-subtitle {
        font-size: 1.15rem;
        color: var(--text-muted);
        max-width: 560px;
        margin-bottom: 2.5rem;
        line-height: 1.6;
        opacity: 0;
        animation: fadeUp 0.8s ease-out 0.8s forwards;
    }

    /* CTAs */
    .cta-group {
        display: flex;
        gap: 1rem;
        align-items: center;
        opacity: 0;
        animation: fadeUp 0.8s ease-out 1s forwards;
    }

    .hero-cta {
        padding: 16px 36px;
        font-size: 1.1rem;
        text-decoration: none;
        position: relative;
        overflow: hidden;
    }

    .hero-cta::after {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, transparent 40%, rgba(255,255,255,0.15) 50%, transparent 60%);
        background-size: 300% 100%;
        animation: shimmer 4s ease-in-out infinite;
    }

    @keyframes shimmer {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }

    .hero-cta-secondary {
        padding: 16px 32px;
        font-size: 1.1rem;
        text-decoration: none;
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        border-radius: var(--radius);
        transition: background 0.3s, border-color 0.3s;
    }

    .hero-cta-secondary:hover {
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(255, 255, 255, 0.2);
    }

    /* Proof line */
    .hero-proof {
        margin-top: 3rem;
        opacity: 0;
        animation: fadeUp 0.8s ease-out 1.2s forwards;
    }

    .proof-badges {
        display: flex;
        align-items: center;
        gap: 16px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .proof-item {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 0.85rem;
        color: var(--text-muted);
    }

    .proof-item i {
        color: var(--primary);
        font-size: 0.8rem;
    }

    .proof-divider {
        width: 1px;
        height: 16px;
        background: rgba(255, 255, 255, 0.1);
    }

    .github-proof {
        color: var(--text-muted);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: color 0.3s;
    }

    .github-proof:hover {
        color: #fff;
    }

    /* === SHARED ANIM === */
    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(24px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* === RESPONSIVE === */
    @media (max-width: 1100px) {
        .ft-0 { width: 200px; }
        .ft-1 { width: 170px; }
        .ft-2 { width: 190px; }
        .ft-3 { width: 200px; }
        .ft-4 { width: 180px; }
        .ft-5 { width: 180px; }
    }

    @media (max-width: 768px) {
        .floating-showcase {
            display: none;
        }

        .hero {
            min-height: 90vh;
        }

        .hero-content {
            padding: 4rem 1.5rem 2rem;
            width: 100%;
        }

        .hero-prompt-demo {
            max-width: 100%;
        }

        .prompt-bar {
            gap: 8px;
            padding: 12px;
        }

        .prompt-icon,
        .prompt-go {
            width: 32px;
            height: 32px;
            font-size: 0.8rem;
        }

        .typing-text {
            font-size: 0.8rem;
        }

        .cta-group {
            flex-direction: column;
            width: 100%;
        }

        .hero-cta,
        .hero-cta-secondary {
            width: 100%;
            text-align: center;
            justify-content: center;
        }

        .proof-divider {
            display: none;
        }

        .proof-badges {
            flex-direction: column;
            gap: 8px;
        }
    }
</style>
