---
// Final CTA section component
const base = import.meta.env.BASE_URL;
---

<div class="cta-section">
    <h2 data-i18n="landing.cta_final_title">Prêt à exploser votre CTR ?</h2>
    <a href={`${base}app`} class="btn btn-primary cta-btn">
        <span data-i18n="landing.cta_final_btn">Créer ma première miniature</span> <i class="fa-solid fa-rocket"></i>
    </a>
</div>

<style>
    .cta-section {
        padding: 5rem 2rem;
        border-top: 1px solid var(--border);
        text-align: center;
    }

    .cta-section h2 {
        font-size: 3rem;
        margin-bottom: 2rem;
    }

    .cta-btn {
        padding: 20px 40px;
        font-size: 1.2rem;
        text-decoration: none;
    }

    .cta-btn i {
        margin-left: 10px;
    }
</style>
