---
// Reference Library panel component
---

<div id="libraryPanel" class="library-panel">
    <div class="library-header">
        <h3 data-i18n="library.title">Bibliothèque</h3>
        <button id="closeLibraryBtn" class="close-btn">
            <i class="fa-solid fa-times"></i>
        </button>
    </div>
    <button id="createPersonaBtn" class="create-persona-btn">
        <i class="fa-solid fa-user-plus"></i>
        <span data-i18n="persona.create">Créer un Persona</span>
    </button>
    <div id="libraryList">
        <!-- Items injected via JS -->
        <p class="empty-msg" data-i18n="library.empty">
            Aucune image sauvegardée.
        </p>
    </div>
</div>

<style>
    .library-panel {
        position: fixed;
        right: 0;
        top: 73px;
        bottom: 0;
        width: 320px;
        background: var(--bg-panel);
        border-left: 1px solid var(--border);
        transform: translateX(100%);
        transition: transform 0.3s ease;
        z-index: 50;
        padding: 1.5rem;
        overflow-y: auto;
    }

    .library-panel.open {
        transform: translateX(0);
    }

    .library-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1.5rem;
    }

    .library-header h3 {
        font-weight: 700;
    }

    .close-btn {
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        padding: 4px;
    }

    .empty-msg {
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    /* Library Item Styles */
    :global(.library-item) {
        margin-bottom: 1.5rem;
        border-bottom: 1px solid var(--border);
        padding-bottom: 1rem;
    }

    :global(.library-img) {
        width: 100%;
        border-radius: 8px;
        margin-bottom: 0.5rem;
        background: #000;
        aspect-ratio: 16/9;
        object-fit: cover;
        cursor: pointer;
    }

    :global(.library-actions) {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    :global(.library-btn) {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(255, 255, 255, 0.05);
        color: var(--text-main);
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 8px 12px;
        font-size: 0.85rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        width: 100%;
        justify-content: center;
    }

    :global(.library-btn:hover) {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.2);
        transform: translateY(-1px);
    }

    :global(.library-btn i) {
        font-size: 0.9em;
        color: var(--accent);
    }

    :global(.library-btn.delete-btn:hover) {
        background: rgba(220, 38, 38, 0.2);
        border-color: rgba(220, 38, 38, 0.5);
    }

    .create-persona-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        width: 100%;
        padding: 10px 16px;
        margin-bottom: 1.5rem;
        background: rgba(139, 92, 246, 0.1);
        border: 1px dashed rgba(139, 92, 246, 0.4);
        border-radius: 10px;
        color: var(--primary);
        font-size: 0.9rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .create-persona-btn:hover {
        background: rgba(139, 92, 246, 0.2);
        border-color: rgba(139, 92, 246, 0.6);
        transform: translateY(-1px);
    }

    /* Persona section styles */
    :global(.library-section-header) {
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-muted);
        margin-bottom: 0.75rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--border);
    }

    :global(.persona-item) {
        margin-bottom: 1.25rem;
        padding: 12px;
        background: rgba(139, 92, 246, 0.06);
        border: 1px solid rgba(139, 92, 246, 0.15);
        border-radius: 12px;
    }

    :global(.persona-name) {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--primary);
        margin-bottom: 8px;
    }

    :global(.persona-grid) {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 6px;
        margin-bottom: 8px;
    }

    :global(.persona-thumb) {
        width: 100%;
        aspect-ratio: 3/4;
        object-fit: cover;
        border-radius: 6px;
        background: #000;
    }

    :global(.persona-actions) {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }
</style>
