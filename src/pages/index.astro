---
import BaseLayout from "@layouts/BaseLayout.astro";
import Hero from "@components/landing/Hero.astro";
import SocialProof from "@components/landing/SocialProof.astro";
import LocalWorkflow from "@components/landing/LocalWorkflow.astro";
import Gallery from "@components/landing/Gallery.astro";
import Problem from "@components/landing/Problem.astro";
import Steps from "@components/landing/Steps.astro";
import Pricing from "@components/landing/Pricing.astro";
import FAQ from "@components/landing/FAQ.astro";
import CTA from "@components/landing/CTA.astro";
import Footer from "@components/Footer.astro";
---

<BaseLayout
    title="NanoThumbnail"
    description="Generate Viral Thumbnails with AI. Unleash the power of Google Nano Banana Pro to turn your ideas into striking YouTube thumbnails."
    showHistoryBtn={false}
    showApiBtn={false}
    showGithubBtn={false}
>
    <div id="landing-view">
        <Hero />
        <SocialProof />
        <LocalWorkflow />
        <Gallery />
        <Problem />
        <Steps />
        <Pricing />
        <div id="faq">
            <FAQ />
        </div>
        <CTA />
        <Footer variant="landing" />
    </div>
</BaseLayout>

<style>
    #landing-view {
        flex: 1;
        display: block;
        overflow-y: auto;
        position: relative;
    }
</style>
